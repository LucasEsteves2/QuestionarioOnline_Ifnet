using QuestionarioOnline.Application.DTOs.Responses;

namespace QuestionarioOnline.Api.Contracts.Responses;

/// <summary>
/// Response após registrar usuário (API Contract)
/// </summary>
public record UsuarioRegistradoResponse(
    Guid Id,
    string Nome,
    string Email
)
{
    public static UsuarioRegistradoResponse From(UsuarioRegistradoDto dto) => new(
        dto.Id,
        dto.Nome,
        dto.Email
    );
}

/// <summary>
/// Response após login (API Contract)
/// </summary>
public record LoginResponse(
    string Token,
    Guid UsuarioId,
    string Nome,
    string Email
)
{
    public static LoginResponse From(Application.DTOs.Responses.LoginResponse dto) => new(
        dto.Token,
        dto.UsuarioId,
        dto.Nome,
        dto.Email
    );
}
