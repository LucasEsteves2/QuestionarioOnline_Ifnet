namespace QuestionarioOnline.Api.Contracts.Requests;

/// <summary>
/// Request para criar um novo questionário (API Contract)
/// </summary>
public record CriarQuestionarioRequest(
    string Titulo,
    string? Descricao,
    DateTime DataInicio,
    DateTime DataFim,
    List<CriarPerguntaRequest> Perguntas
);

/// <summary>
/// Request para criar uma pergunta
/// </summary>
public record CriarPerguntaRequest(
    string Texto,
    int Ordem,
    bool Obrigatoria,
    List<CriarOpcaoRequest> Opcoes
);

/// <summary>
/// Request para criar uma opção de resposta
/// </summary>
public record CriarOpcaoRequest(
    string Texto,
    int Ordem
);
