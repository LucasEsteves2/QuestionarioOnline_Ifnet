namespace QuestionarioOnline.Domain.Exceptions;

public class RespostaInvalidaException : DomainException
{
    public RespostaInvalidaException(string message) : base(message)
    {
    }
}

public class PerguntaObrigatoriaException : DomainException
{
    public PerguntaObrigatoriaException(string textoPergunta) 
        : base($"A pergunta '{textoPergunta}' é obrigatória e não foi respondida")
    {
    }
}

public class RespostaDuplicadaException : DomainException
{
    public RespostaDuplicadaException(string textoPergunta) 
        : base($"Já existe uma resposta para a pergunta '{textoPergunta}'")
    {
    }
}
