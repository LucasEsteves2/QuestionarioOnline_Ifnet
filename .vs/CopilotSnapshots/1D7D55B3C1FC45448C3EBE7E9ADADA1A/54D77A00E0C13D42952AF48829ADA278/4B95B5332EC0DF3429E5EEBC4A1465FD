using Microsoft.EntityFrameworkCore;
using QuestionarioOnline.Domain.Entities;
using QuestionarioOnline.Domain.Interfaces;
using QuestionarioOnline.Domain.ValueObjects;
using QuestionarioOnline.Infrastructure.Persistence;

namespace QuestionarioOnline.Infrastructure.Repositories;

public class UsuarioInternoRepository : IUsuarioInternoRepository
{
    private readonly QuestionarioOnlineDbContext _context;

    public UsuarioInternoRepository(QuestionarioOnlineDbContext context)
    {
        _context = context;
    }

    public async Task<UsuarioInterno?> ObterPorIdAsync(Guid id, CancellationToken cancellationToken = default)
    {
        return await _context.UsuariosInternos
            .FirstOrDefaultAsync(u => u.Id == id, cancellationToken);
    }

    public async Task<UsuarioInterno?> ObterPorEmailAsync(Email email, CancellationToken cancellationToken = default)
    {
        return await _context.UsuariosInternos
            .FirstOrDefaultAsync(u => u.Email.Address == email.Address, cancellationToken);
    }

    public async Task<bool> ExisteEmailAsync(Email email, CancellationToken cancellationToken = default)
    {
        return await _context.UsuariosInternos
            .AnyAsync(u => u.Email.Address == email.Address, cancellationToken);
    }

    public async Task AdicionarAsync(UsuarioInterno usuarioInterno, CancellationToken cancellationToken = default)
    {
        await _context.UsuariosInternos.AddAsync(usuarioInterno, cancellationToken);
        await _context.SaveChangesAsync(cancellationToken);
    }

    public async Task AtualizarAsync(UsuarioInterno usuarioInterno, CancellationToken cancellationToken = default)
    {
        _context.UsuariosInternos.Update(usuarioInterno);
        await _context.SaveChangesAsync(cancellationToken);
    }
}
