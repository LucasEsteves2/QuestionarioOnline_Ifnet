namespace QuestionarioOnline.Api.Responses;

/// <summary>
/// Response padronizado para TODOS os endpoints da API
/// Seguindo padrão JSend: https://github.com/omniti-labs/jsend
/// </summary>
public class ApiResponse<T>
{
    /// <summary>
    /// Status da resposta: "success", "fail", "error"
    /// </summary>
    public string Status { get; set; } = string.Empty;

    /// <summary>
    /// Dados retornados (apenas em caso de sucesso)
    /// </summary>
    public T? Data { get; set; }

    /// <summary>
    /// Mensagem de erro/sucesso
    /// </summary>
    public string? Message { get; set; }

    /// <summary>
    /// Erros de validação (campo ? mensagens)
    /// </summary>
    public Dictionary<string, string[]>? Errors { get; set; }

    /// <summary>
    /// Código HTTP
    /// </summary>
    public int StatusCode { get; set; }

    // ? Factory Methods para criar responses padronizados

    /// <summary>
    /// Sucesso (200, 201, 202)
    /// </summary>
    public static ApiResponse<T> Success(T data, string? message = null, int statusCode = 200)
    {
        return new ApiResponse<T>
        {
            Status = "success",
            Data = data,
            Message = message,
            StatusCode = statusCode
        };
    }

    /// <summary>
    /// Erro de validação (400 Bad Request)
    /// </summary>
    public static ApiResponse<T> ValidationError(Dictionary<string, string[]> errors, string? message = null)
    {
        return new ApiResponse<T>
        {
            Status = "fail",
            Message = message ?? "Erro de validação",
            Errors = errors,
            StatusCode = 400
        };
    }

    /// <summary>
    /// Erro de negócio (400 Bad Request)
    /// </summary>
    public static ApiResponse<T> Fail(string message, int statusCode = 400)
    {
        return new ApiResponse<T>
        {
            Status = "fail",
            Message = message,
            StatusCode = statusCode
        };
    }

    /// <summary>
    /// Erro de servidor (500)
    /// </summary>
    public static ApiResponse<T> Error(string message, int statusCode = 500)
    {
        return new ApiResponse<T>
        {
            Status = "error",
            Message = message,
            StatusCode = statusCode
        };
    }

    /// <summary>
    /// Não encontrado (404)
    /// </summary>
    public static ApiResponse<T> NotFound(string? message = null)
    {
        return new ApiResponse<T>
        {
            Status = "fail",
            Message = message ?? "Recurso não encontrado",
            StatusCode = 404
        };
    }
}

/// <summary>
/// Response sem dados (apenas mensagem)
/// </summary>
public class ApiResponse : ApiResponse<object>
{
    public static new ApiResponse Success(string? message = null, int statusCode = 200)
    {
        return new ApiResponse
        {
            Status = "success",
            Message = message,
            StatusCode = statusCode
        };
    }

    public static new ApiResponse Fail(string message, int statusCode = 400)
    {
        return new ApiResponse
        {
            Status = "fail",
            Message = message,
            StatusCode = statusCode
        };
    }

    public static new ApiResponse NotFound(string? message = null)
    {
        return new ApiResponse
        {
            Status = "fail",
            Message = message ?? "Recurso não encontrado",
            StatusCode = 404
        };
    }
}
