namespace QuestionarioOnline.Application.DTOs;

// DTOs para Resultados
public record ResultadoQuestionarioDto(
    Guid QuestionarioId,
    string Titulo,
    int TotalRespostas,
    List<ResultadoPerguntaDto> Perguntas
);

public record ResultadoPerguntaDto(
    Guid PerguntaId,
    string Texto,
    List<ResultadoOpcaoDto> Opcoes
);

public record ResultadoOpcaoDto(
    Guid OpcaoId,
    string Texto,
    int TotalVotos,
    double Percentual
);
