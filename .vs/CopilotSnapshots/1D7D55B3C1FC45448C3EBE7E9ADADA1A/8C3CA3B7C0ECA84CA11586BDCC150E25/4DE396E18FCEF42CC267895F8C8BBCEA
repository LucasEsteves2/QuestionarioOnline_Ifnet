using Microsoft.AspNetCore.Authorization;
using Microsoft.AspNetCore.Mvc;
using QuestionarioOnline.Api.Responses;
using QuestionarioOnline.Api.Services;
using QuestionarioOnline.Application.DTOs.Requests;
using QuestionarioOnline.Application.DTOs.Responses;
using QuestionarioOnline.Domain.Entities;
using QuestionarioOnline.Domain.ValueObjects;

namespace QuestionarioOnline.Api.Controllers;

/// <summary>
/// Autenticação e autorização
/// </summary>
[AllowAnonymous]
[Route("api/[controller]")]
public class AuthController : BaseController
{
    private readonly AuthService _authService;

    public AuthController(AuthService authService)
    {
        _authService = authService;
    }

    /// <summary>
    /// Realizar login (MOCK - para desenvolvimento)
    /// Email: analista@empresa.com | Senha: Senha123
    /// </summary>
    [HttpPost("login")]
    [ProducesResponseType(typeof(ApiResponse<LoginResponse>), StatusCodes.Status200OK)]
    [ProducesResponseType(typeof(ApiResponse<LoginResponse>), StatusCodes.Status401Unauthorized)]
    public ActionResult<ApiResponse<LoginResponse>> Login([FromBody] LoginRequest request)
    {
        if (request.Email != "analista@empresa.com" || request.Senha != "Senha123")
            return UnauthorizedResponse<LoginResponse>("Email ou senha inválidos");

        var usuarioMock = new UsuarioInterno(
            "Analista Teste",
            Email.Create(request.Email),
            "hash_mockado"
        );

        var token = _authService.GerarToken(usuarioMock);

        var response = new LoginResponse(
            token,
            usuarioMock.Id,
            usuarioMock.Nome,
            usuarioMock.Email.ToString()
        );

        return OkResponse(response, "Login realizado com sucesso");
    }
}
