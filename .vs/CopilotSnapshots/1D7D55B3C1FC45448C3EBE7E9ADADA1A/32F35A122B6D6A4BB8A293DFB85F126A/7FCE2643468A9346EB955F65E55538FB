namespace QuestionarioOnline.Application.DTOs;

// DTOs para Resposta
public record RegistrarRespostaRequest(
    Guid QuestionarioId,
    List<RespostaItemDto> Respostas,
    string IpAddress,
    string UserAgent,
    string? Estado = null,
    string? Cidade = null,
    string? RegiaoGeografica = null,
    string? DispositivoTipo = null,
    string? NavegadorTipo = null
);

public record RespostaItemDto(
    Guid PerguntaId,
    Guid OpcaoRespostaId
);

public record RespostaRegistradaDto(
    Guid Id,
    Guid QuestionarioId,
    DateTime DataResposta
);

// DTO para mensagem da fila (processamento assíncrono)
public record RespostaParaProcessamentoDto(
    Guid QuestionarioId,
    List<RespostaItemDto> Respostas,
    string IpAddress,
    string UserAgent,
    string? Estado,
    string? Cidade,
    string? RegiaoGeografica,
    string? DispositivoTipo,
    string? NavegadorTipo
);
